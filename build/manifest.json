{
  "manifest_version": 3,
  "name": "YouTube Video Analyzer",
  "short_name": "YouTube Video Analyzer",
  "version": "1.0.0",
  "description": "A simple React app as a Chrome extension",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["tabs"],
  "host_permissions": ["http://localhost:3002/*"],
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  }
}
